<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_checking_distributor"
    tools:context=".App.Fragments.Distributor.UpdateStatusChecker.UpdateStatusCheckerFragment">

    <ProgressBar
        android:id="@+id/progressBar_checking_distributor_phase"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_checking_distributor_phase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar_checking_distributor_phase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/distribution_checking_state"
        android:textSize="@dimen/text_size_xlarge" />

</RelativeLayout>